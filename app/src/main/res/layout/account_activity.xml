<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:background="@color/white"
    android:screenOrientation="portrait">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layoutNavigate">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="93dp"
                android:layout_height="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo2" />

            <View
                android:id="@+id/view2"
                android:layout_width="375dp"
                android:layout_height="1.5dp"
                android:background="@color/pink"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <TextView
                android:id="@+id/personal_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Личный кабинет"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:fontFamily="@font/mooglesansmedium"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp">
            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/personal_data_block"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personal_data"
                android:background="@drawable/shadow"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Персональные данные"
                    android:textColor="@color/pink"
                    android:textStyle="bold"
                    android:fontFamily="@font/mooglesansmedium"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"></TextView>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/photo_icon"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"></ImageView>

                <!--Общее выравнивание двух строк по вертикали-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="30dp">
                    <!--Первая горизонтальная строка-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <!--Первое поле-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginRight="30dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/pink"
                                android:text="Артем"
                                android:gravity="center"
                                android:fontFamily="@font/mooglesansmedium"
                                android:textSize="10sp"></TextView>
                            <View
                                android:layout_width="88dp"
                                android:layout_height="1.5dp"
                                android:background="@color/pink">
                            </View>
                        </LinearLayout>
                        <!--Первое поле закончилось-->
                        <!--Второе поле-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/pink"
                                android:text="Сергеевич"
                                android:fontFamily="@font/mooglesansmedium"
                                android:gravity="center"
                                android:textSize="10sp"></TextView>
                            <View
                                android:layout_width="88dp"
                                android:layout_height="1.5dp"
                                android:background="@color/pink">
                            </View>
                        </LinearLayout>
                        <!--Второе поле закончилось-->
                    </LinearLayout>
                    <!--Первая горизонтальная строка закончилась-->
                    <!--Вторая горизонтальная строка-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >
                        <!--Третье поле-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginRight="30dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/pink"
                                android:text="+79999999999"
                                android:gravity="center"
                                android:fontFamily="@font/mooglesansmedium"
                                android:textSize="10sp"></TextView>
                            <View
                                android:layout_width="88dp"
                                android:layout_height="1.5dp"
                                android:background="@color/pink">
                            </View>
                        </LinearLayout>
                        <!--Третье поле закончилось-->
                        <!--Четвертое поле-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/pink"
                                android:text="hello@mail.ru"
                                android:gravity="center"
                                android:fontFamily="@font/mooglesansmedium"
                                android:textSize="10sp"></TextView>
                            <View
                                android:layout_width="88dp"
                                android:layout_height="1.5dp"
                                android:background="@color/pink">
                            </View>
                        </LinearLayout>
                        <!--Четвертое поле закончилось-->
                    </LinearLayout>
                    <!--Вторая горизонтальная строка закончилась-->
                </LinearLayout>
                <!--Общее выравнивание двух строк по вертикали закончилось-->
            </androidx.cardview.widget.CardView>

            <!--Блок с картой и предпочтениями-->
            <LinearLayout
                android:id="@+id/card_likes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personal_data_block">
                <!--Карта участника-->
                <androidx.cardview.widget.CardView
                    android:layout_width="145dp"
                    android:layout_height="107dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/personal_data_block"
                    android:background="@drawable/shadow"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Карта участника"
                        android:textColor="@color/pink"
                        android:textSize="10sp"
                        android:fontFamily="@font/mooglesansmedium"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level"
                        android:textColor="@color/pink"
                        android:textSize="10sp"
                        android:fontFamily="@font/mooglesansmedium"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="532 руб."
                        android:textColor="@color/pink"
                        android:textSize="10sp"
                        android:fontFamily="@font/mooglesansmedium"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="40dp"
                        android:gravity="center">
                    </TextView>
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="120dp"
                        android:layout_height="7dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:max="1000"
                        android:progress="532"
                        android:min="100"
                        android:progressTint = "@color/pink"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="70dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 руб."
                            android:textColor="@color/pink"
                            android:textSize="10sp"
                            android:fontFamily="@font/mooglesansmedium"
                            android:layout_marginRight="50dp"
                            android:layout_marginLeft="5dp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000 руб."
                            android:fontFamily="@font/mooglesansmedium"
                            android:textColor="@color/pink"
                            android:textSize="10sp"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!--Карта участника закончилась-->

                <!--Предпочтения-->
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="107dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/personal_data_block"
                    android:background="@drawable/shadow"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Любимое лакомство"
                        android:textColor="@color/pink"
                        android:textSize="10sp"
                        android:fontFamily="@font/mooglesansmedium"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp">
                    </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/pink_donat"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Розовая страсть"
                            android:textColor="@color/pink"
                            android:fontFamily="@font/mooglesansmedium"
                            android:textSize="10sp"
                            android:gravity="center">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ваш приоритет!"
                            android:textColor="@color/pink"
                            android:fontFamily="@font/mooglesansmedium"
                            android:textSize="10sp"
                            android:gravity="center">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--Предпочтения закончились-->
            </LinearLayout>
            <!--Блок с картой и предпочтениями закончился-->
            <!--Блок акции-->
            <androidx.cardview.widget.CardView
                android:id="@+id/sales"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_likes"
                android:background="@drawable/shadow"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:cardCornerRadius="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Акции"
                    android:textColor="@color/pink"
                    android:textStyle="bold"
                    android:fontFamily="@font/mooglesansmedium"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Подарок на День Рождения!"
                    android:textColor="@color/pink"
                    android:textStyle="bold"
                    android:fontFamily="@font/mooglesansmedium"
                    android:textSize="10sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="5dp"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Дарим один пончик и\n кофе на выбор!"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mooglesansmedium"
                        android:textSize="10sp"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:layout_marginRight="110dp">
                    </TextView>
                    <Button
                        android:layout_width="72sp"
                        android:layout_height="19sp"
                        android:text="Промокод"
                        android:fontFamily="@font/mooglesansmedium"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/button_style"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_gravity="right">
                    </Button>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Счастливый час!"
                    android:textColor="@color/pink"
                    android:textStyle="bold"
                    android:fontFamily="@font/mooglesansmedium"
                    android:textSize="10sp"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="5dp"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_marginTop="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Дарим один пончик и\n кофе на выбор!"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mooglesansmedium"
                        android:textSize="10sp"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:layout_marginRight="110dp">
                    </TextView>
                    <Button
                        android:layout_width="72sp"
                        android:layout_height="19sp"
                        android:text="Промокод"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/button_style"
                        android:textSize="10sp"
                        android:fontFamily="@font/mooglesansmedium"
                        android:gravity="center"
                        android:layout_gravity="right">
                    </Button>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Блок акции закончился-->
            <!--Блок последние заказы-->
            <androidx.cardview.widget.CardView
                android:id="@+id/last_orders"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sales"
                android:background="@drawable/shadow"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Последние заказы"
                    android:textColor="@color/pink"
                    android:textStyle="bold"
                    android:fontFamily="@font/mooglesansmedium"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"></TextView>
                <!--Общий блок-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!--Первая строчка-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!--Первый пончик-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="5dp">
                            <ImageView
                                android:layout_width="31dp"
                                android:layout_height="31dp"
                                android:src="@drawable/pink_donat"></ImageView>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:layout_marginRight="8dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_donat_one"
                                    android:fontFamily="@font/mooglesansmedium"
                                    android:textColor="@color/pink"
                                    android:textSize="10sp"
                                    android:textStyle="bold">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="34 руб. 99 коп. (1 шт.)"
                                    android:fontFamily="@font/mooglesansmedium"
                                    android:textColor="@color/pink"
                                    android:textSize="10sp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <!--Первый пончик закончился-->
                        <!--Второй пончик-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="5dp">
                            <ImageView
                                android:layout_width="31dp"
                                android:layout_height="31dp"
                                android:src="@drawable/blue_donat"></ImageView>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/mooglesansmedium"
                                    android:text="@string/name_donat_four"
                                    android:textColor="@color/pink"
                                    android:textSize="10sp"
                                    android:textStyle="bold">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/mooglesansmedium"
                                    android:text="44 руб. 99 коп. (1 шт.)"
                                    android:textColor="@color/pink"
                                    android:textSize="10sp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <!--Второй пончик закончился-->
                    </LinearLayout>
                    <!--Первая строчка закончилась-->
                    <!--Вторая строчка-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <!--3 пончик-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp">
                            <ImageView
                                android:layout_width="31dp"
                                android:layout_height="31dp"
                                android:src="@drawable/coffee_one"></ImageView>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:layout_marginRight="8dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Капучино"
                                    android:fontFamily="@font/mooglesansmedium"
                                    android:textColor="@color/pink"
                                    android:textSize="10sp"
                                    android:textStyle="bold">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="19 руб. 99 коп. (1 шт.)"
                                    android:fontFamily="@font/mooglesansmedium"
                                    android:textColor="@color/pink"
                                    android:textSize="10sp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <!--3 пончик закончился-->
                        <!--4 пончик-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp">
                            <ImageView
                                android:layout_width="31dp"
                                android:layout_height="31dp"
                                android:src="@drawable/yellow_donat"></ImageView>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_donat_three"
                                    android:textColor="@color/pink"
                                    android:fontFamily="@font/mooglesansmedium"
                                    android:textSize="10sp"
                                    android:textStyle="bold">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="37 руб. 99 коп. (1 шт.)"
                                    android:fontFamily="@font/mooglesansmedium"
                                    android:textColor="@color/pink"
                                    android:textSize="10sp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <!--4 пончик закончился-->
                    </LinearLayout>
                    <!--Вторая строчка закончилась-->
                </LinearLayout>
                <!--Общий блок закончился-->
                <!--Кружочки навигации-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="110dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/oval_elements"
                        app:tint="@color/pink"
                        android:layout_margin="3dp"></ImageView>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/oval_elements"
                        android:layout_margin="3dp"></ImageView>
                    <ImageView
                        android:layout_width="10dp"
